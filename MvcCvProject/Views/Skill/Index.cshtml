@using MvcCvProject.Models.Entity
@model List<TblSkill>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = ""; }
@{ string labelColor = ""; }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <br />
                                <h1 class="card-title">Yetenek Listesi</h1>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Beceri Düzeyi</th>
                                            <th style="width: 40px">Değer</th>
                                            <th style="width: 300px">Düzenle</th>
                                            <th style="width: 300px">Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Progress >= 0 && item.Progress <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelColor = "badge bg-danger";
                                            }
                                            if (item.Progress >= 51 && item.Progress <= 70)
                                            {
                                                color = "progress-bar bg-warning";
                                                labelColor = "badge bg-warning";
                                            }
                                            if (item.Progress >= 71 && item.Progress <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelColor = "badge bg-primary";
                                            }
                                            if (item.Progress >= 85 && item.Progress <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                labelColor = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.Progress%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelColor">@item.Progress%</span></td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/Skill/UpdateSkill/@item.ID" style="width: 135px">
                                                        <i class="fas fa-pen"></i>
                                                        Düzenle
                                                    </a>
                                                <td>
                                                    <a class="btn btn-info btn-danger" href="/Skill/DeleteSkill/@item.ID" style="width: 135px">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                                <br />
                                <a href="/Skill/AddSkill/" class="btn btn-info">Yeni Yetenek Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>