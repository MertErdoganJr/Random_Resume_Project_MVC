
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MvcCvProject.Models.Entity
@model List<TblCertificate>

@{ string color = "";}

<!DOCTYPE html>

<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-2">
                    </div>
                    <div class="card-body">
                        <div class="tab-pane" id="timeline">
                            <div class="timeline timeline-inverse">
                                @foreach (var item in Model)
                                {
                                    if (item.ID % 2 == 0) { color = "btn btn-success"; }
                                    else { color = "btn btn-primary"; }
                                    <div class="time-label">
                                        <a href="/Certificate/GetCertificate/@item.ID">
                                            <span class="@color">
                                                @item.Date
                                            </span>
                                        </a>
                                    </div>
                                    <div>
                                        <i class="fas fa-comment-dots bg-primary"></i>
                                        <div class="timeline-item">
                                            <div class="timeline-body">
                                                @item.Description
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Certificate/AddCertificate" class="btn btn-warning">Yeni Sertifika Girişi</a>
        </div>
    </section>
</body>
</html>
