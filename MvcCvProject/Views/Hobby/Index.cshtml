@using MvcCvProject.Models.Entity
@model List<TblHobby>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hobi Düzenkleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <h4>Açıklama 1</h4>
        <textarea rows="5" class="form-control" name="Description1">@item.Description1</textarea>
        <br />

        <h4>Açıklama 2</h4>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>

</form>
