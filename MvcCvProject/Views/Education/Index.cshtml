@using MvcCvProject.Models.Entity
@model List<TblEducation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.SecondTitle</td>
            <td>@item.Description</td>
            <td>@item.TotalScore</td>
            <td>@item.Date</td>
            <td><a href="/Education/DeleteEducation/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.ID" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Education/AddEducation/" class="btn btn-primary">Yeni Eğitim Ekle</a>